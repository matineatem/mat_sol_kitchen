<h1>Your new order</h1>

<%= form_for @order do |f| %>
<%= f.label :name_tag %>
<%= f.text_field :name_tag %><br><br>
<%= f.label :user_id %>
<%= f.collection_select :user_id, User.all, :id, :name %><br><br>
<%= f.label :dessert_id %>
<%= f.collection_check_boxes :dessert_ids, Dessert.all, :id, :name %><br><br>
<%= f.submit %>
<% end %>

